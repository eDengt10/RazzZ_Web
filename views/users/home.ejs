<body class="home-body">  
    <!-- Navbar -->
    <header class="navbar">
        <a href="#" class="logo">RazzZ<span>Officials</span></a>
        <nav class="home-nav">
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#games">Games</a></li>
                <li><a href="#community">Community</a></li>
                <li><a href="#news">News</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
        <div class="user-actions">
            <a href="https://discord.com/invite/YOUR-DISCORD-LINK" class="discord-btn" target="_blank">Discord</a>
            <a href="/profile" class="profile-link">
                <img src="/userImages/<%= user.image %>" alt="User Profile" class="profile-img">
            </a>
        </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="hero-content">
            <h1>Welcome to Game<span>Zone</span></h1>
            <p>The ultimate place for gamers to connect, compete, and collaborate.</p>
            <a href="#games" class="cta-btn">Explore Games</a>
        </div>
    </section>

    <!-- Featured Games Section -->
    <section id="games" class="games-section">
        <h2>Featured Games</h2>
        <div class="games-container">
            <div class="game-card">
                <img src="https://via.placeholder.com/300x200?text=Game+1" alt="Game 1">
                <h3>Game 1</h3>
                <p>An epic multiplayer adventure.</p>
            </div>
            <div class="game-card">
                <img src="https://via.placeholder.com/300x200?text=Game+2" alt="Game 2">
                <h3>Game 2</h3>
                <p>Strategy and survival at its best.</p>
            </div>
            <div class="game-card">
                <img src="https://via.placeholder.com/300x200?text=Game+3" alt="Game 3">
                <h3>Game 3</h3>
                <p>Fast-paced action and competition.</p>
            </div>
        </div>
    </section>

    <!-- Community Section -->
    <section id="community" class="community-section">
        <h2>Join Our Community</h2>
        <p>Connect with thousands of gamers, share tips, strategies, and more. Be part of the GameZone family!</p>
        <a href="https://discord.com/invite/YOUR-DISCORD-LINK" target="_blank" class="cta-btn">Join Discord</a>
    </section>

    <!-- News Section -->
    <section id="news" class="news-section">
        <h2>Latest News</h2>
        <div class="news-container">
            <article class="news-card">
                <h3>GameZone Tournament 2024 Announced!</h3>
                <p>Get ready for our annual tournament with exciting rewards and challenges.</p>
                <a href="#" class="read-more">Read More</a>
            </article>
            <article class="news-card">
                <h3>New Game Releases to Watch</h3>
                <p>Check out the hottest upcoming games of 2024 that you don't want to miss!</p>
                <a href="#" class="read-more">Read More</a>
            </article>
            <article class="news-card">
                <h3>Community Spotlight: Top Players</h3>
                <p>We highlight some of the top-performing players in our community this month.</p>
                <a href="#" class="read-more">Read More</a>
            </article>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 GameZone. All Rights Reserved.</p>
    </footer>
</body>